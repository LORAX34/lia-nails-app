---
import CardServicio from "@/components/CardServicio.astro";
import type { Translation } from "@/i18n/types";

interface Props {
    translations: Translation;
}

const { translations: t } = Astro.props;
---

<div
    class="flex flex-col gap-y-8 justify-center items-center p-4 max-w-6xl mx-auto"
>
    <h1
        class="text-secondary text-4xl sm:text-5xl md:text-6xl lg:text-7xl uppercase hover:text-secondary/60 font-light transition-colors duration-300 text-center mb-8"
    >
        {t.titleServicio}
    </h1>
    <CardServicio
        title={t.menuseccion.seccion1.title}
        services={t.menuseccion.seccion1}
    />
    <CardServicio
        title={t.menuseccion.seccion2.title}
        services={t.menuseccion.seccion2}
    />
    <CardServicio
        title={t.menuseccion.seccion3.title}
        services={t.menuseccion.seccion3}
    />
    <CardServicio
        title={t.menuseccion.seccion4.title}
        services={t.menuseccion.seccion4}
    />
    <CardServicio
        title={t.menuseccion.seccion5.title}
        services={t.menuseccion.seccion5}
    />
</div>
