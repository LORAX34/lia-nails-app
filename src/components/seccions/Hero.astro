---
import type { Translation } from "@/i18n/types";
import SelectorIdioma from "@/components/SelectorIdioma.astro";

interface Props {
    translations: Translation;
}

const { translations: t } = Astro.props;
---

<section class="relative min-h-screen bg-third">
    <div class="relative h-80 md:h-96 lg:h-[450px] overflow-hidden">
        <img
            src="/hero-image.webp"
            alt="Lia Nails - Especialista en diseño de uñas"
            class="w-full h-full object-cover"
        />
        <div
            class="absolute inset-0 bg-gradient-to-b from-black/30 via-transparent to-black/50"
        >
        </div>

        <!-- Selector de idiomas en la imagen -->
        <div class="absolute top-6 left-6 z-50">
            <SelectorIdioma />
        </div>
    </div>

    <!-- Contenido principal -->
    <div class="relative -mt-16 md:-mt-20 z-20 px-4 pb-12">
        <div class="max-w-4xl mx-auto">
            <div
                class="bg-third rounded-3xl shadow-2xl border-2 border-primary/20 overflow-hidden"
            >
                <div class="flex flex-col lg:flex-row items-center">
                    <!-- Imagen lateral -->
                    <div class="w-full lg:w-1/2 p-4 md:p-6 flex justify-center">
                        <img
                            class="w-64 h-64 md:w-80 md:h-80 lg:w-88 lg:h-88 object-cover rounded-3xl border-4 border-primary shadow-xl"
                            src="/01.webp"
                            alt="Diseño de uñas profesional"
                        />
                    </div>

                    <!-- Contenido de texto -->
                    <div class="w-full lg:w-1/2 p-4 md:p-6 lg:p-8 space-y-6">
                        <!-- Descripción -->
                        <p
                            class="text-secondary text-base md:text-lg lg:text-xl leading-relaxed text-center lg:text-left font-medium"
                        >
                            {t.info1}
                        </p>

                        <!-- Botón de WhatsApp -->
                        <div class="flex justify-center lg:justify-start">
                            <a
                                href="https://wa.me/351925764850"
                                target="_blank"
                                rel="noopener noreferrer"
                                class="inline-flex items-center gap-3 bg-primary text-secondary px-6 py-3 md:px-8 md:py-4 rounded-full font-semibold text-base md:text-lg hover:bg-secondary hover:text-third transform hover:scale-105 transition-all duration-300 shadow-lg hover:shadow-xl"
                            >
                                <svg
                                    class="w-6 h-6"
                                    fill="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.986 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.890-5.335 11.893-11.893A11.821 11.821 0 0020.465 3.488"
                                    ></path>
                                </svg>
                                {t.textButton}
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
