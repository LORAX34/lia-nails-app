---
import type { Translation } from "@/i18n/types";

interface Props {
    translations: Translation;
}

const { translations: t } = Astro.props;

// Función para formatear el número de teléfono con espacios
function formatPhoneNumber(phone: number): string {
    const phoneStr = phone.toString();
    return phoneStr.replace(/(\d{3})(\d{3})(\d{3})(\d{3})/, "$1 $2 $3 $4");
}
---

<section class="bg-primary py-16 px-4">
    <div class="max-w-4xl mx-auto">
        <div
            class="bg-third rounded-3xl p-8 md:p-12 shadow-lg hover:shadow-xl transition-all duration-300 text-center space-y-12"
        >
            <!-- Horarios Section -->
            <div>
                <h2
                    class="text-secondary text-3xl sm:text-4xl md:text-5xl font-light uppercase mb-8 hover:text-secondary/60 transition-colors duration-300"
                >
                    {t.titleHorario}
                </h2>

                <div class="space-y-8">
                    <!-- Semana 1 -->
                    <div class="space-y-3">
                        <span
                            class="block text-secondary font-medium text-lg sm:text-xl md:text-2xl"
                        >
                            {t.semana1}
                        </span>
                        <span
                            class="block text-secondary font-semibold text-xl sm:text-2xl md:text-3xl"
                        >
                            {t.horario}
                        </span>
                    </div>

                    <!-- Divider -->
                    <div class="border-t border-secondary/20 my-6"></div>

                    <!-- Semana 2 -->
                    <div class="space-y-3">
                        <span
                            class="block text-secondary font-medium text-lg sm:text-xl md:text-2xl"
                        >
                            {t.semana2}
                        </span>
                        <span
                            class="block text-secondary font-semibold text-xl sm:text-2xl md:text-3xl"
                        >
                            {t.horario}
                        </span>
                    </div>
                </div>
            </div>

            <!-- Divider principal -->
            <div class="border-t-2 border-secondary/30"></div>

            <!-- Ubicación Section -->
            <div>
                <h2
                    class="text-secondary text-2xl sm:text-3xl md:text-4xl font-light uppercase mb-6 hover:text-secondary/60 transition-colors duration-300"
                >
                    {t.titleUbicacion}
                </h2>
                <span
                    class="block text-secondary font-medium text-lg sm:text-xl leading-relaxed"
                >
                    {t.direccion}
                </span>
            </div>

            <!-- Divider principal -->
            <div class="border-t-2 border-secondary/30"></div>

            <!-- Contacto Section -->
            <div>
                <h2
                    class="text-secondary text-2xl sm:text-3xl md:text-4xl font-light uppercase mb-6 hover:text-secondary/60 transition-colors duration-300"
                >
                    {t.titleContacto}
                </h2>
                <a
                    href={`tel:+${t.phone}`}
                    class="inline-block text-secondary font-semibold text-lg sm:text-xl hover:text-secondary/60 transition-colors duration-300 hover:scale-105 transform"
                >
                    +{formatPhoneNumber(t.phone)}
                </a>
            </div>
        </div>
    </div>
</section>
