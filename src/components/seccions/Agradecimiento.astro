---
import type { Translation } from "@/i18n/types";

interface Props {
    translations: Translation;
}

const { translations: t } = Astro.props;
---

<section class="bg-third py-16 px-4">
    <div class="max-w-6xl mx-auto">
        <div class="flex flex-col lg:flex-row items-center gap-8 lg:gap-12">
            <!-- Texto a la izquierda -->
            <div class="flex-1 text-center lg:text-left">
                <h2
                    class="text-secondary text-3xl md:text-4xl lg:text-5xl font-light uppercase mb-8 leading-tight"
                >
                    Agradecimiento
                </h2>
                <p
                    class="text-secondary text-lg md:text-xl lg:text-2xl leading-relaxed font-medium"
                >
                    {t.info2}
                </p>
            </div>

            <!-- Imagen a la derecha -->
            <div class="flex-1 flex justify-center lg:justify-end">
                <img
                    src="/lianails.webp"
                    alt="Lia trabajando en diseño de uñas"
                    class="w-80 h-80 md:w-96 md:h-96 lg:w-[500px] lg:h-[500px] object-cover rounded-3xl shadow-2xl border-4 border-primary/30 hover:scale-105 transform transition-all duration-500"
                />
            </div>
        </div>
    </div>
</section>
