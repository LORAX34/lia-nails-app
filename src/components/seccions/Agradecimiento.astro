---
import type { Translation } from "@/i18n/types";

interface Props {
    translations: Translation;
}

const { translations: t } = Astro.props;
---

<section class="bg-third py-16 px-4">
    <div class="max-w-6xl mx-auto">
        <div
            class="flex flex-col-reverse lg:flex-row items-center gap-8 lg:gap-12"
        >
            <div class="flex-1 text-center lg:text-left">
                <p
                    class="text-secondary text-lg md:text-xl lg:text-2xl leading-relaxed font-medium"
                >
                    {t.info2}
                </p>
            </div>

            <div class="flex-1 flex justify-center lg:justify-end">
                <div class="relative">
                    <img
                        src="/lianails.webp"
                        alt="Lia trabajando en diseño de uñas"
                        class="max-w-[240px] sm:max-w-[280px] md:max-w-[320px] lg:max-w-[360px] h-auto object-contain rounded-3xl shadow-2xl border-4 border-primary/30 hover:scale-105 transform transition-all duration-500"
                        loading="lazy"
                        decoding="async"
                        fetchpriority="high"
                        sizes="(max-width: 640px) 240px, (max-width: 768px) 280px, (max-width: 1024px) 320px, 360px"
                    />
                </div>
            </div>
        </div>
    </div>
</section>
